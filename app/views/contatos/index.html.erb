<% #encoding: utf-8 %>
<% if not @contatos.empty? and @contatos.first.pessoa %>
  <h3> Contatos: <%= @contatos.first.pessoa.nome %> </h3>
  <%= content_tag :div do%>
    <%= content_tag :table, class: 'table table-striped table-bordered' do %>
      <%= content_tag :thead do %>
        <%= content_tag :th, 'Data' %>
        <%= content_tag :th, 'Descrição' %>
        <%= content_tag :th, '' %>
      <%end%>
      <% @contatos.each do |contato| %>
        <%= content_tag :tr do %>
          <%= content_tag :td, contato.data_contato.strftime("%d/%m/%Y") %>
          <%= content_tag :td, contato.descricao %>
          <%= content_tag :td do%>
            <%= link_to 'Editar', edit_pessoa_contato_path(contato.pessoa_id, contato.id), :class => "btn-link" %>
          <%end%>
        <%end%>
      <%end%>
    <%end%>
  <%end%>
<% else %>
  <h2 class="text-center">Contatos</h2>
  <%= content_tag :h3, "Não contém contatos", :class => "help-block"%>
<%end%>
