<div id="ativos_inativos" >
  <h2>Lista de alunos ativos ou inativos</h2>
  <fieldset class= "filtro-ativo-inativo">
  <legend>Filtro: </legend>
  <form class="form form-horizontal form_ativos_inativos" method="get"/>
    <div class="control-group">
      <input type="checkbox" id="ativos_matriculados" name="ativos_matriculados" <%= params[:ativos_matriculados] ? "checked='checked'" : '' %> />
      <label class="checkbox" for="ativos_matriculados">Alunos Ativos</label>
      &nbsp;
      &nbsp;
      <input type="checkbox" id="inativos" name="inativos" <%= params[:inativos] ? "checked='checked'" : '' %> />
      <label class="checkbox" for="inativos">Alunos Inativos</label>
      &nbsp;
      &nbsp;
      <input type="checkbox" id="interrompidos" name="interrompidos" <%= params[:interrompidos] ? "checked='checked'" : '' %> />
      <label class="checkbox" for="interrompidos">Alunos Interrompidos</label>
    </div>
    <input type="submit" value="Filtrar"/>
  </form>
  </fieldset>
  <table class="table table-striped table-bordered tabela-ativos-inativos">
    <thead>
      <tr>
        <th>Nomes</th>
        <th>Anotações</th>
      </tr>
    </thead>
    <tbody>
    <% @alunos.each do |pessoa| %>
      <tr>
        <td>
            <span><%= pessoa.nome %></span>
        </td>
        <td class="tabela_colunas_brancas">
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
